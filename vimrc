syntax on
set autoindent
" set smartindent
set tabstop=4
set hlsearch
set number
set mouse=a
set background=dark
colorscheme papercolor
" other colocrscheme monokaicolor
" see all ~/.vim/color
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx

